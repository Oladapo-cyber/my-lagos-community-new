{
  "name": "my-lagos-community-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@11.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "dev:main": "npm run dev --workspace=apps/main",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build:main": "npm run build --workspace=apps/main",
    "build:admin": "npm run build --workspace=apps/admin"
  },
  "devDependencies": {
    "turbo": "^2.4.0"
  }
}
